
@{
    ViewBag.Title = "Tablas";
}

<div class="container">
    <div class="row">
        <div class="page-header">
            <h1>Tablas de multiplicar</h1>
        </div>
        <div class="col-sm-4">


            <form action="@Url.Action("Tablas","Demo")" method="post" class="form-inline">
                <div class="form-group col-sm-8">
                    <input type="number" class="form-control" name="num" value="" autocomplete="off" placeholder="Número" />
                </div>
                <div class="form-group col-sm-3">
                    <input type="submit" class="btn btn-primary" name="btn" value="Calcular" />

                </div>

            </form>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4">
            @if (ViewBag.showing == true)
            {
            <div class="col-sm-12">
                <div class="alert alert-info alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @foreach (var item in ViewBag.resultado)
                    {
                        <p> @item </p>
                    }
                </div>
            </div>
            
            }
        </div>
    </div>

</div>

