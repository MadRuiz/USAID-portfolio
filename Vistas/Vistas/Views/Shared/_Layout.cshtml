<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/percircle.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    <div id="app_navbar">
        @{Html.RenderPartial("../Components/_Sidebar"); }
        @{Html.RenderPartial("../Components/_Mainbar"); }
    </div>

    <div class="body-content col-sm-10 pull-right">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/percircle.js"></script>
    
    <script>
        $(function () {
            $("#countdown1").percircle({ perdown: true, secs: 3, timeUpText: 'yeey!' });
            $("#countdown2").percircle({ perdown: true, secs: (1 * 60) + 2, timeUpText: 'yeey!' });
            $("#countdown3").percircle({ perdown: true, secs: 45, timeUpText: ':D!' });
            $('#calendar').fullCalendar({
                weekends: false
            });
        });
    </script>
</body>
</html>